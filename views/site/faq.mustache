<div class="main-container">
    <section class="image-bg bg-dark parallax overlay pt140 pb140 pt-xs-40 pb-xs-40">
        <div class="background-image-holder fadeIn" style="transform: translate3d(0px, 98px, 0px); background: url(file:///Users/sarahalder/Development/pubsavvyswipe/public/template/img/vent3.jpg);">
            <img alt="Background Image" class="background-image" src="img/account-background-1.png" style="display: none;">
        </div>

        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-left">
                    <h2 class="uppercase mb8">Frequently Asked Questions</h2>
                    <p class="lead mb40">Find the answers to your problems here</p>
                </div>
            </div>

            
            
        </div>
   <!--end of container-->
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center">
                    <h4 class="mb16">Common questions about PubSavvySwipe</h4>
                    <p class="lead mb64">
                        <a href="mailto:info@frameresearch.comSubject=Question about PubSavvy" target="_top">Email us</a> if you've got more questions, and we'll do our best to answer
                    </p>
                </div>
                <input ng-model="newQuestion.question" type="text" placeholder="New Question">
                <input ng-model="newQuestion.answer" type="text" placeholder="New Answer"> 
                <input ng-model="newQuestion.index" type="text" placeholder="Position">
                <a class='btn' ng-click="addQuestion()">Add</a>
            </div>
                    
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <ul ng-repeat = "question in questions track by $index" class="accordion accordion-2">
                        <li>
                            <div>
                        <div >
                            <input ng-hide="question.hidden =='yes'" ng-blur="updateQuestion(question)" ng-model="question.index" type="text" />
                            <input ng-hide="question.hidden =='yes'" ng-blur="updateQuestion(question)" ng-model="question.question" type="text" />
                            <input ng-hide="question.hidden =='yes'" ng-blur="updateQuestion(question)" ng-model="question.answer" type="text" />
                            <a ng-hide="question.hidden == 'yes'" ng-click="finishedEditing(question)"class="btn"> Finished Editing </a>
                        </div>


                                <h3 ng-show="question.visible == 'yes'"><%question.index%></h3>                       
                                <div ng-show="question.visible == 'yes'">
                                    <h4 class="inline-block mb0"><%question.question%></h4>
                                </div>
                                <div ng-show="question.visible == 'yes'">
                                    <p>
                                        <%question.answer%>
                                    </p>
                                </div>
                                <a ng-show="question.visible == 'yes'" ng-click="toggleVisibility(question)"class="btn"> Edit </a>

                            </div>
                        </li>
                    </ul>
                    <!--end of accordion-->
                </div>
            </div>
            <!--end of row-->
        </div>
                <!--end of container-->
    </section>
    
