<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">

<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <title>Register</title>
	<!-- ANGULAR -->
    <!--link rel="stylesheet" href="/admin/styles/style.css"-->
    <script src="https://malsup.github.com/jquery.form.js"></script>
    <script src="/admin/js/fileupload/angular-file-upload-shim.js"></script>
    <script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js'></script>
    <script src="https://code.angularjs.org/1.2.20/angular-sanitize.min.js"></script>  
    <script src="/admin/js/fileupload/angular-file-upload.js"></script>
    
    <script src='/app/app.js'></script>
    <script src='/app/autosearch.js'></script>
    <script src='/app/newdevice.js'></script>
    <script src='/app/profiles.js'></script>
    <script src='/app/register.js'></script>
    <script src='/app/search.js'></script>
	
  </head>

  <body ng-app="PubSavvySwipe" ng-controller="RegisterController" style="padding:20px" ng-init="init()">
    <h1>Register Account</h1>

    <div>
        <h2>Sign Up as a Traveler</h2>
        <input ng-model="profile.firstName" type="text" placeholder="First Name" > <br/><br/>
        <input ng-model="profile.lastName" type="text" placeholder="Last Name" > <br/><br/>
        <input ng-model="profile.email" type="text" placeholder="Email" > <br/><br/>
        <input ng-model="profile.password"type="password" placeholder="Password" ><br/><br/>
        <button ng-click="register()">Sign up</button>
    </div>  
    
	
    
  </body>
  
  
</html>
