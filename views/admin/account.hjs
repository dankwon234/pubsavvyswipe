  <body ng-app="PubSavvySwipe" ng-controller="AccountController" style="padding:20px" ng-init="init()">
    <div id="load"></div><!--[if lt IE 9]>
    <p class="browsehappy">You are using an strong outdated browser. <br>Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="page">

      <div class="sep-top-3x">

        <h2 class="bordered-left bordered-right upper wow flipInX animated" style="visibility: visible; animation-name: flipInX;">Manage Account</h2>
        <hr>
        <div style="padding-left:24px">
          <div style="min-height:120px" class ="section" ng-file-drop="onFileSelect($files, 'image', 'profile')">
            <img src="{{profile.image}}"align="left" style="width:120px;margin-right:12px"/>
            <h5>Profile Picture</h5>
            <p>To update your profile <br>drag and drop it here</p>
          </div>


          <div>
            <hr>
            <h5>Account Name</h5>
            First Name:<br>
            <input ng-model="profile.firstName" type="text" placeholder="First Name" style="padding-left:6px"><br /><br />
            Last Name:<br>
            <input ng-model="profile.lastName" type="text" placeholder="Last Name" style="padding-left:6px"><br /><hr>
            <h5>Contact Information</h5>
            Email:<br>
            <input ng-model="profile.email" type="text" placeholder="Email" style="padding-left:6px"><br /><hr>
            <h5>Password</h5>
            New Password:<br>
            <input ng-model="newPassword" type="password" placeholder="New Password" style="padding-left:6px"><br /><br />
            Confirm Password:<br>
            <input ng-model="confirmPassword" type = "password" placeholder = "New Password" style="padding-left:6px"><br /><hr>

            <div style="width:194px; margin:auto">
              <button ng-click="update()" class="btn btn-success btn-large" align="center"><i class="fa fa-check-circle-o"></i> Update Profile</button><br /><br />
            </div>

            


          </div>
        </div>
      </div> 

      <!-- Start Nav Section-->
      <nav id="main-navigation" role="navigation" class="navbar navbar-fixed-top navbar-standard">        
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle"><i class="fa fa-align-justify fa-lg"></i></button><a href="/admin/home" class="navbar-brand"><img src="/admin/img/pubsavvy-logo-white.png" alt="" class="logo-white"><img src="/admin/img/pubsavvy-logo.png" alt="" class="logo-dark"></a>
          </div>
          <div class="navbar-collapse collapse">
            <button type="button" class="navbar-toggle"><i class="fa fa-close fa-lg"></i></button>
            <ul class="nav yamm navbar-nav navbar-right main-nav">
                    <!-- istanzio un id univoco-->
                    <li><a href="/admin/home" title="Portfolio"id="menu_item_Portfolio" data-ref="#" >About</a></li>                   
                    <li><a href="/admin/faqs" title="Portfolio"id="menu_item_Portfolio" data-ref="#" >FAQ</a></li> 

                    <li ng-show="currentUser.loggedIn == 'yes'"><a href="/admin/account" title="Portfolio"id="menu_item_Portfolio" data-ref="#" >Account</a></li> 

                    <li ng-show="currentUser.loggedIn == 'no' "><a href="#" data-toggle="modal" data-target="#loginModal">Log In</a></li>  

                    <li ng-show="currentUser.loggedIn == 'no' "><a href="#" data-toggle="modal" data-target="#registerModal">Join</a></li>   


                    <li ng-show="currentUser.loggedIn == 'yes' "><a ng-click="logout()">Log Out</a></li>  
            </ul>
          </div>
        </div>
