<html>
  <head>
    {{>head}}
  </head>
   
  <body ng-app="PubSavvySwipe" ng-controller="AutoSearchController" ng-init="init()" style="padding:36px">
    <h1>Admin Console: AutoSearch</h1>


    <h2> Current AutoSearch Terms: </h2>

    <div >
      <table  style="width:50%;">
        <tr ng-repeat = "term in autoSearchValue.terms track by $index" style= "border: 1px solid black; border-collapse: collapse;">
          <td style="width:50%;"><%term%></td>
          <td style="width:10%;" align= "center"><button ng-click="deleteTerm(term)">Delete Term</button></td>      
        </tr>
      </table>
    <div>
    <br>

    
    <input ng-model="newTerm" type="text" placeholder="New Term">  
    <button ng-click="addTerm()">Add Term</button>
     

  </body>
</html>