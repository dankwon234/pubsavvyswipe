<html>
  <head>
    <link rel = "stylesheet" href = "/admin/stylesheets/style.css">
  
    <!-- IMPORTS -->
    <script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js'></script>
    <script src="https://code.angularjs.org/1.2.20/angular-sanitize.min.js"></script>

    <script src = '/app/app.js'></script>
    <script src = '/app/profiles.js'></script>
    <script src = '/app/search.js'></script>
    <script src = '/app/autosearch.js'></script>
    <style> table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
    }</style>



   <title>AutoSearch | Admin</title>
  </head>
   
  <body ng-app="PubSavvySwipe" ng-controller="AutoSearchController" ng-init="init()">
    <h1>Admin Console: AutoSearch</h1>
    <button ng-click="createAutoSearch()">Create Initial</button>


    <h2> Current AutoSearch Terms: </h2>

    <div>
      <table  style="width:50%;">
        <tr ng-repeat = "term in autoSearchValue.terms track by $index" style= "border: 1px solid black; border-collapse: collapse;">
          <td style="width:50%;">{{term}}</td>
          <td style="width:10%;" align= "center"><button ng-click="deleteTerm(term)">Delete Term</button></td>      
        </tr>
      </table>
    <div>
    <br>

    
    <input ng-model="newTerm" type="text" placeholder="New Term">  
    <button ng-click="addTerm()">Add Term</button>
     

  </body>
</html>